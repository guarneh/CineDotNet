@model List<CIneDotNet.Models.Funcion>;
@{
    ViewData["Title"] = "VerFunciones";
}

<h1>VerFunciones</h1>

<h2>@ViewBag.MiPeli.Nombre</h2>

<p>@ViewBag.MiPeli.Sinopsis</p>

<div class="row">
    <form asp-action="verFunciones" method="post">
        <input type="hidden" value="@ViewBag.MiPeli.id" name="id"/>
        <input type="datetime-local" name="fecha"/>
        <input type="submit" />
    </form>
    @ViewBag.Fecha = fecha
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Sala
            </th>
            
            <th>
                Fecha
            </th>
            
            <th>
                Costo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Fecha != null)
        {
            
            @foreach (var item in Model.Where(f => f.fecha >= DateTime.Now))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.miSala.ubicacion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.costo)
                    </td>
                    <td>
                        <a asp-action="ComprarEntrada" asp-route-id="@item.ID">Comprar</a>
                    </td>
                </tr>
            }

        }else
        {
            @foreach (var item in Model.Where(f => f.fecha >= DateTime.Now))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.miSala.ubicacion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.costo)
                    </td>
                    <td>
                        <a asp-action="ComprarEntrada" asp-route-id="@item.ID">Comprar</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>

